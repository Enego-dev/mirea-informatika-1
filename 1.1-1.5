void moreEquation() {
	cout << "Задание 1.4 \"Ещё уравнение\"" << endl;
	double a, b, c;
	cout << "Введите A" << endl;
	cin >> a;
	cout << "Введите B" << endl;
	cin >> b;
	cout << "Введите C" << endl;
	cin >> c;
	
	if (a == 0)
	{
		cout << "Это уравнение не вида a * x^2 + bx + c = 0, но мы его решим)" << endl;

		if (b != 0)
			cout << "x = -c / b = " << -c / b << endl;
		else
			cout << "Деление на 0" << endl;

		return;
	}

	if (b == 0) {
		cout << "Это уравнение не вида ax^2 + bx + c = 0, но мы его решим)" << endl;

		double xInPow = -c / a;

		if (xInPow < 0)
			cout << "Нет корней. x^2 всегда >= 0" << endl;
		else if (xInPow == 0)
			cout << "x = 0" << endl;
		else
			cout << "x = ±" << sqrt(xInPow) << endl;

		return;
	}

	double d = (b * b) - (4 * a * c);
	if (d < 0) {
		cout << "Квадратное уравнение не имеет решений (дискриминант меньше 0)" << endl;
		return;
	}

	double x1 = (-b + (sqrt(d))) / (2 * a);
	double x2 = (-b - (sqrt(d))) / (2 * a);
	if (d == 0)
		cout << "x = " << x1 << endl;
	else
		cout << "x1 = " << x1 << "\t" << "x2 = " << x2 << endl;
}

