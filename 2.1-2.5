void branching() {
	double a, x, w;

	cout << "Введите a: ";
	cin >> a;
	cout << "Введите x" << endl;
	cin >> x;

	double abs_x = abs(x);

	if (abs_x < 1) {
		if (x == 0) {
			cout << "Аргумент логарифма должен быть > 0" << endl;
			return;
		}

		cout << "w = a * ln|x|" << endl;
		cout << "w = " << a * log(abs_x);
	}
	if (abs_x >= 1) {
		double sqrt_arg = a - pow(x, 2);
		if (sqrt_arg < 0) {
			cout << "Аргумент корня должен быть >= 0" << endl;
			return;
		}

		cout << "w = sqrt(a - x^2)" << endl;
		cout << "w = " << sqrt(sqrt_arg) << endl;
	}
}

void function() {
	double x, y, b, z;

	cout << "Введите x: " << endl;
	cin >> x;
	cout << "Введите y: " << endl;
	cin >> y;
	cout << "Введите b: " << endl;
	cin >> b;

	double log_arg, sqrt_arg;
	log_arg = b - y;
	sqrt_arg = b - x;

	if (log_arg > 0 && sqrt_arg >= 0) {
		z = log(log_arg) * sqrt(sqrt_arg);
		cout << z << endl;
	}
	else if (log_arg <= 0){
		cout << "Аргумент логарифма (b - y) <= 0" << endl;
	}
	else if (sqrt_arg < 0) {
		cout << "Аргумент корня (b - x) < 0" << endl;
	}
	else {
		cout << "Аргумент логарифма(b - y) <= 0 и аргумент корня (b - x) < 0" << endl;
	}
}

